<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.kenzahn.zahn.widget.TypeFaceTextView
                android:layout_width="match_parent"
                android:layout_toLeftOf="@id/item_add"
                android:text="July 2020 Flashcards: Deluxe Set"
                android:paddingStart="5dp"
                android:id="@+id/tv_p_name"
                android:paddingEnd="5dp"
                android:textColor="@color/color_black"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/item_add"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/plus" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <com.kenzahn.zahn.widget.TypeFaceTextView
                android:layout_width="match_parent"
                android:layout_toLeftOf="@id/item_remove"
                android:text="ProductCode: FC295"
                android:paddingStart="5dp"
                android:id="@+id/tv_p_code"
                android:paddingEnd="5dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/item_remove"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/minus" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_toLeftOf="@id/item_delete"
                android:gravity="center|left"
                android:layout_height="wrap_content">


            <com.kenzahn.zahn.widget.TypeFaceTextView
                android:layout_width="wrap_content"
                android:text="1*50"
                android:paddingStart="5dp"
                android:id="@+id/tv_qty"
                android:paddingEnd="5dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>


                <com.kenzahn.zahn.widget.TypeFaceTextViewBold
                    android:layout_width="wrap_content"
                    android:text="$50"
                    android:paddingStart="15dp"
                    android:textColor="@color/color_black"
                    android:paddingEnd="5dp"
                    android:id="@+id/tv_price"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <ImageView
                android:layout_width="26dp"
                android:layout_centerVertical="true"
                android:src="@drawable/delete"
                android:layout_marginEnd="10dp"
                android:id="@+id/item_delete"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"
                android:layout_height="26dp"/>
        </RelativeLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>