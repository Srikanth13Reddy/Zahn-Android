<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    android:background="@color/white"
    app:cardElevation="1dp"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:id="@+id/llclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.kenzahn.zahn.widget.TypeFaceTextView
            android:id="@+id/kolodaImage"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="2"
            android:text="xccxccxzfsdfdafafafaafafafaafaaaaaafaaadfaffadfafafadfdfafaaaafczcz"
            android:textColor="@color/color_black" />

        <CheckBox
            android:id="@+id/isCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:button="@drawable/custom_checkbox"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecolor"
        android:orientation="horizontal"></LinearLayout>

</androidx.cardview.widget.CardView>