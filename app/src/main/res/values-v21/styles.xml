<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Nav_ImageView" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">10dp</item>

    </style>

    <style name="Nav_TextView" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">24sp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>
</resources>
